pipeline {
    agent any
    stages {
        stage('Run Python Script') {
            steps {
                sh 'python3 ./main.py > output.txt 2>&1' // run script and capture output
            }
        }
        stage('Print Console Report') {
            steps {
                echo readFile('output.txt') // print output to console
            }
        }
        post {

            emailext body: 'TAU Web Server is not respond!\n' & echo readFile('output.txt'), subject: 'TAU Web Server is not respond!', to: 'liav@nefesh.co.il'
         }
     }
    }
}
